# Database configuration for all microservices
# WARNING: NEVER commit this file to version control (e.g., Git).
# Add this file to .gitignore to prevent sensitive information from being exposed.

# Root password for MySQL databases
DB_ROOT_PASSWORD=mysecretrootpassword

# Database names for each microservice
DB_COLLECTION_NAME=collection_db
DB_ACCOUNT_NAME=account_db
DB_MARKET_NAME=market_db
DB_CURRENCY_NAME=currency_db
DB_ADMIN_NAME=admin_db

# Database user credentials for each service
DB_COLLECTION_USER=collection_user
DB_ACCOUNT_USER=account_user
DB_MARKET_USER=market_user
DB_CURRENCY_USER=currency_user
DB_ADMIN_USER=admin_user

# Database passwords for each service user
DB_COLLECTION_PASSWORD=collection_user_password
DB_ACCOUNT_PASSWORD=account_user_password
DB_MARKET_PASSWORD=market_user_password
DB_CURRENCY_PASSWORD=currency_user_password
DB_ADMIN_PASSWORD=admin_user_password

# API Gateway settings (public API Gateway and admin API Gateway)
API_GATEWAY_PORT=5000
API_GATEWAY_ADMIN_PORT=5001

# Set the Flask environment (development or production)
FLASK_ENV=development
